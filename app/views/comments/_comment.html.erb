<div class="comment">
  <p>
    <small>
      <strong class="comment_user"><%= Digest::SHA1.hexdigest(comment.user.username)[0, 6] %></strong>
    </small>
    <small class="faded" style="margin-left: 10px"><%= local_time_ago(comment.created_at) %></small>
    <br>
    <%= comment.body %>
    <br>
    <small><a class="reply_comment">Reply</a></small>
  </p>
</div>